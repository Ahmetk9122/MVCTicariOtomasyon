@using MvcOnlineTicariOtamasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}


<div style="float:right">
    <br />
    @using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
    {
        <p>
            Kargo Takip No: @Html.TextBox("p")
            <input type="submit" name="name" value="Ara" />
        </p>
    }
</div>
<table class="table table-hover" style="margin-top:20px;">

    <tr>

        <th>Takip Kodu</th>
        <th>Personel</th>
        <th>ALıcı</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.takipKodu
            </td>
            <td>@k.Personel </td>
            <td>@k.Alici </td>
            <td>@k.Tarih </td>
            <td><a href="/CariPanel/CariKargoTakip/@k.takipKodu" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
        </tr>


    }

</table>



