@model MvcOnlineTicariOtamasyon.Models.Siniflar.KargoDetay
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Kargo</h2>
<br />
<form method="post" class="form-group">
    <p>Takip Kodu</p>
    <input type="text" value="@ViewBag.takipkod" class="form-control" readonly name="TakipKodu" />
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control" })
    <br />
    <p>Alıcı</p>
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    <input type="date" name="Tarih" class="form-control" />
    <br />
    <p>Açıklama</p>
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-success">Kaydet</button>
</form>
    