@using MvcOnlineTicariOtamasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div>
    <div style="float: right;padding-left: 5px;">
        <a href="/Fatura/FaturaEkle" class="btn btn-info" style="width:250px;">Yeni Fatura Girişi</a>

    </div>
    <div style="float:right">
        <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#Modal1" style="width:250px;"">PopUp Penceresi</button>

    </div>
</div>
<br />
<table class="table table-hover" style="margin-top:20px;">

    <tr>
        @*<th>Seri No</th>*@
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        @*<th>Tarih</th>
        <th>Saat</th>*@
        <th>Tesil Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    @*<td>@k.FaturaSeriNo</td>*@
    <td>@k.FaturaSıraNo</td>
    <td>@k.VergiDairesi</td>
    @*<td>@k.Tarih</td>
    <td>@k.Saat</td>*@

    <td>@k.TeslimAlan</td>
    <td>@k.Toplam</td>
    <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-default" style="background-color:thistle;color:white">Kalem</a></td>
</tr>


    }

</table>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">PopUp açılış ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-info table-hover">
                    <tr>
                        <th>Sıra No</th>
                        <th>Vergi dairesi</th>
                        <th>Toplam</th>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.VergiDairesi</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button"class="btn btn-danger"data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>