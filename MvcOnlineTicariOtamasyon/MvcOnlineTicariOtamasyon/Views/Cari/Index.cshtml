@using MvcOnlineTicariOtamasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div>
    <div style="float:right;padding-left:5px;" >
        <a href="/Cari/YeniCari" class="btn btn-info" style="width: 250px;">Yeni Cari Ekle</a>
    </div>
    <div style="float:right">
        <a href="/Cari/CariListe" class="btn btn-outline-dark" style="width:250px;">Cari Kartları Görüntüle</a>
    </div>
</div >
<br />
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>AD</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Cariid</td>
            <td>@x.CariAd</td>
            <td>@x.CariSoyad</td>
            <td>@x.CariSehir</td>
            <td>@x.CariMail</td>
            <td><a href="/Cari/CariSil/@x.Cariid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Cari/CariGetir/@x.Cariid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cari/MusteriSatis/@x.Cariid" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>
            
        </tr>
    }
</table>
