@using MvcOnlineTicariOtamasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div>
    <div style="float:left;">

        @using (Html.BeginForm("Index", "Urun", FormMethod.Get))
        {
            <p>
                Ürün Adı: @Html.TextBox("p")
                <input type="submit" name="name" value="Ara" />
            </p>
        }
    </div>
    <div style="float:right;padding-right:5px;">
        <a href="/Urun/YeniUrun" class="btn btn-primary" style="width:175px;">Yeni Ürün</a>
    </div>
</div>
<table class="table table-bordered">
    <tr>

        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>

    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.UrunAd</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyat ₺</td>
            <td>@u.SatisFiyat ₺</td>
            <td>@u.Kategori.KategoriAD</td>
            <td> <a href="/Urun/UrunSil/@u.Urunid" class="btn btn-danger">Sil</a></td>
            <td> <a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-success">Güncelle</a></td>
            <td> <a href="/Urun/SatisYap/@u.Urunid" class="btn btn-outline-info">Satış Yap</a></td>

        </tr>
    }
</table>

